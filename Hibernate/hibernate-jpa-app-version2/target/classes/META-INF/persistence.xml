<?xml version="1.0" encoding="ISO-8859-1"?>

<persistence  xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="ejemploJPA" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.example.hibernateapp.entity.Cliente</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
       <properties>
           <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost/hibernate?serverTimezone=America/El_Salvador"/>
           <property name="jakarta.persistence.jdbc.user" value="root"/>
           <property name="jakarta.persistence.jdbc.password" value="pass123"/>
           <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
           <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
           <property name="hibernate.show_sql" value="true"/>
       </properties>
    </persistence-unit>
</persistence>
